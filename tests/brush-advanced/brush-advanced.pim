set ui/message = off
set ui/status = off
set ui/view-info = off
set ui/switcher = off
set ui/cursor = off
set ui/palette = off

brush
brush/unset perfect

map/clear!
map         .           :zoom +
map         ,           :zoom -
map         ;           :mode command
map         z           :v/center
map         x           :swap
map         =           :brush/toggle perfect
map/normal  e           :brush/toggle erase
map/normal  <shift>     :brush/toggle multi
map/normal  ]           :brush/size +
map/normal  [           :brush/size -
